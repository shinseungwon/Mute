    <ImageView
        android:id="@+id/widget_good"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/widget_albumart"
        android:layout_alignEnd="@+id/widget_albumart"
        android:layout_alignRight="@+id/widget_albumart"
        android:layout_gravity="center_vertical"
        android:background="#00ffffff"
        android:src="@mipmap/nw_good" />

    <ImageView
        android:id="@+id/widget_bad"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/widget_albumart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:background="#00ffffff"
        android:src="@mipmap/nw_bad" />
-->

    <ImageView
        android:id="@+id/widget_repeat"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/widget_albumart"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/widget_albumart"
        android:background="#00ffffff"
        android:src="@mipmap/repeatall"
        android:layout_marginBottom="10dp" />

    <!--
    <ImageView
        android:id="@+id/widget_mode"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/widget_albumart"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/widget_repeat"
        android:background="#00ffffff"
        android:contentDescription="mode"
        android:src="@mipmap/mapicon" />
-->
    <ImageView
        android:id="@+id/widget_prev"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/widget_albumart"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/widget_play"
        android:layout_toStartOf="@+id/widget_play"
        android:background="#00ffffff"
        android:src="@mipmap/nw_prev" />

    <ImageView
        android:id="@+id/widget_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/widget_albumart"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/widget_next"
        android:layout_toStartOf="@+id/widget_next"
        android:background="#00ffffff"
        android:src="@mipmap/nw_play" />

    <ImageView
        android:id="@+id/widget_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/widget_albumart"
        android:layout_alignEnd="@+id/widget_exit"
        android:layout_alignRight="@+id/widget_exit"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        android:background="#00ffffff"
        android:src="@mipmap/nw_next" />


    <ImageView
        android:id="@+id/widget_exit"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="#00ffffff"
        android:src="@mipmap/nw_exit" />

</RelativeLayout>