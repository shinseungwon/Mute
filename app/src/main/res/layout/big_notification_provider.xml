    <ImageView
        android:id="@+id/big_notification_repeat"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/big_notification_albumart"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/big_notification_albumart"
        android:background="#00ffffff"
        android:src="@mipmap/repeatall"
        android:layout_marginBottom="10dp" />
<!--
    <ImageView
        android:id="@+id/big_notification_mode"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/big_notification_albumart"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/big_notification_repeat"
        android:background="#00ffffff"
        android:contentDescription="mode"
        android:src="@mipmap/mapicon" />
-->
    <ImageView
        android:id="@+id/big_notification_prev"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/big_notification_albumart"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/big_notification_play"
        android:layout_toStartOf="@+id/big_notification_play"
        android:background="#00ffffff"
        android:src="@mipmap/nw_prev" />

    <ImageView
        android:id="@+id/big_notification_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/big_notification_albumart"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/big_notification_next"
        android:layout_toStartOf="@+id/big_notification_next"
        android:background="#00ffffff"
        android:src="@mipmap/nw_play" />

    <ImageView
        android:id="@+id/big_notification_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/big_notification_albumart"
        android:layout_alignEnd="@+id/big_notification_exit"
        android:layout_alignRight="@+id/big_notification_exit"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        android:background="#00ffffff"
        android:src="@mipmap/nw_next" />


    <ImageView
        android:id="@+id/big_notification_exit"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="#00ffffff"
        android:src="@mipmap/nw_exit" />

</RelativeLayout>