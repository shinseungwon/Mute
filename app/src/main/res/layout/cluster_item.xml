<?xml version="1.0" encoding="utf-8"?><!-- 메인,검색 액티비티에서 제목으로 정렬할때 아이템 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clusteritem_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/clusteritem_albumart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:src="@mipmap/default_albumart" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/clusteritem_albumart"
        android:layout_toRightOf="@+id/clusteritem_albumart"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clusteritem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:singleLine="true"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/clusteritem_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="true"

            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cluster_goodbad"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>