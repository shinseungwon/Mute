<?xml version="1.0" encoding="utf-8"?><!-- 메인,검색 액티비티에서 제목으로 정렬할때 아이템 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recommend_albumart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:src="@mipmap/default_albumart" />

    <TextView
        android:id="@+id/recommend_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recommend_albumart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:background="@color/colorPrimary"
        android:maxWidth="80dp"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="12sp" />

</RelativeLayout>