    <ImageView
        android:id="@+id/notification_prev"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/notification_play"
        android:layout_toStartOf="@+id/notification_play"
        android:background="#00ffffff"
        android:src="@mipmap/nw_prev" />

    <ImageView
        android:id="@+id/notification_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/notification_next"
        android:layout_toStartOf="@+id/notification_next"
        android:background="#00ffffff"
        android:src="@mipmap/nw_play" />

    <ImageView
        android:id="@+id/notification_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/notification_exit"
        android:layout_toStartOf="@+id/notification_exit"
        android:background="#00ffffff"
        android:src="@mipmap/nw_next" />


    <ImageView
        android:id="@+id/notification_exit"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="#00ffffff"
        android:src="@mipmap/nw_exit" />

</RelativeLayout>